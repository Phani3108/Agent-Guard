# ========================================
# AgentGuard Backend Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# ========================================
# AI API Configuration (REQUIRED)
# ========================================
# Choose ONE option: Standard OpenAI OR Azure OpenAI

# OPTION 1: Standard OpenAI (openai.com)
# Get your API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OPTION 2: Azure OpenAI (Recommended for Enterprise)
# Get these from Azure Portal â†’ Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4  # Your GPT-4 deployment name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure DALL-E deployment (optional, for image generation)
# If you have DALL-E deployed in Azure
AZURE_DALLE_DEPLOYMENT_NAME=dall-e-3  # Your DALL-E deployment name (if available)

# ========================================
# Server Configuration
# ========================================
# Port for the backend server
PORT=5000

# Environment: development, production, or test
NODE_ENV=development

# ========================================
# Logging Configuration
# ========================================
# Log levels: error, warn, info, debug
# Use 'info' for production, 'debug' for development
LOG_LEVEL=info

# ========================================
# CORS Configuration (Optional)
# ========================================
# Allowed origins for CORS (comma-separated)
# Default: http://localhost:3000
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ========================================
# Rate Limiting (Optional)
# ========================================
# Maximum requests per minute per IP
# RATE_LIMIT_MAX=60
# RATE_LIMIT_WINDOW_MS=60000

# ========================================
# Webhook Configuration (Optional)
# ========================================
# URL to send notifications when reviews complete
# WEBHOOK_URL=https://your-webhook-endpoint.com/notify
# WEBHOOK_SECRET=your_webhook_secret

# ========================================
# Image Generation Configuration (Optional)
# ========================================
# Enable/disable image generation feature
# IMAGE_GENERATION_ENABLED=true

# DALL-E model quality: "standard" or "hd"
# Note: "hd" costs 2x more but provides better quality
# DALL_E_QUALITY=standard

# DALL-E style: "natural" or "vivid"
# "natural" = more realistic, "vivid" = more dramatic
# DALL_E_STYLE=natural

# Default image size (if not platform-specific)
# Options: 1024x1024, 1024x1792, 1792x1024
# DALL_E_DEFAULT_SIZE=1024x1024

# ========================================
# Database Configuration (Future Use)
# ========================================
# Uncomment when database integration is added
# DATABASE_URL=postgresql://user:password@localhost:5432/agentguard
# REDIS_URL=redis://localhost:6379

# ========================================
# Security (Production Only)
# ========================================
# JWT secret for authentication (when auth is added)
# JWT_SECRET=your_super_secret_jwt_key_change_this

# API key for webhook authentication
# API_SECRET_KEY=your_api_secret_key

# ========================================
# External Services (Future Use)
# ========================================
# If you want to use other AI models in the future
# ANTHROPIC_API_KEY=your_anthropic_key
# COHERE_API_KEY=your_cohere_key
# STABILITY_API_KEY=your_stability_ai_key
