# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://pulse:pulse@localhost:5432/pulse

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI (for drift explanation agent)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o

# Alerting - Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Alerting - Email (Resend)
RESEND_API_KEY=re_your_resend_key_here
ALERT_EMAIL_FROM=alerts@pulse.example.com
ALERT_EMAIL_TO=team@example.com

# Alerting - Microsoft Teams (optional)
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# Job Scheduling
SNAPSHOT_CRON=0 2 * * *
DRIFT_CHECK_CRON=0 3 * * *

# Drift Detection Thresholds
DRIFT_SIZE_CHANGE_THRESHOLD=0.15
DRIFT_DISTRIBUTION_THRESHOLD=0.20
DRIFT_CONVERSION_THRESHOLD=0.25
DRIFT_INACTIVITY_THRESHOLD=0.30

# Logging
LOG_LEVEL=info
