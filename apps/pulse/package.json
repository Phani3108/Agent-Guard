{
  "name": "pulse",
  "version": "1.0.0",
  "description": "Agentic Segment Drift & Reach Intelligence - Your segments are alive. We tell you when they go wrong.",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "vitest",
    "test:unit": "vitest run test/unit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "seed": "tsx scripts/seed_demo_segments.ts",
    "generate-snapshots": "tsx scripts/generate_synthetic_snapshots.ts",
    "docker:up": "docker-compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/docker-compose.yml down"
  },
  "keywords": [
    "segment-monitoring",
    "drift-detection",
    "audience-observability",
    "agentic-ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^5.0.1",
    "bullmq": "^5.13.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "ioredis": "^5.4.1",
    "openai": "^4.67.3",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "pino-pretty": "^11.2.2",
    "resend": "^4.0.1",
    "zod": "^3.23.8",
    "@agentguard/contracts": "workspace:*",
    "@agentguard/sdk": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.9.1",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.14.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}