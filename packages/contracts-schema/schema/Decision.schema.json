{
  "$ref": "#/definitions/Decision",
  "definitions": {
    "Decision": {
      "type": "object",
      "properties": {
        "request_id": {
          "type": "string"
        },
        "tenant_id": {
          "type": "string"
        },
        "action": {
          "type": "string",
          "enum": [
            "ALLOW",
            "REDACT",
            "DENY",
            "WARN"
          ]
        },
        "reasons": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "redactions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "original": {
                "type": "string"
              },
              "replacement": {
                "type": "string"
              },
              "start": {
                "type": "integer",
                "minimum": 0
              },
              "end": {
                "type": "integer",
                "minimum": 0
              }
            },
            "required": [
              "type",
              "replacement",
              "start",
              "end"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "allowed_tools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "requires_approval": {
          "type": "boolean",
          "default": false
        },
        "audit_id": {
          "type": "string"
        }
      },
      "required": [
        "request_id",
        "tenant_id",
        "action"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}